#include <stdio.h>
#include <string.h>

struct student_record
{
    char name[50];
    int roll;
    float marks[5];
    float average;
    char grade;
};

struct student_record s[50];

int main()
{
    int n, i, j;
    float sum, max, classTotal = 0;
    char topper[50];

    printf("======================Student Records======================\n\n");
    printf("Enter the number of students: ");
    scanf("%d",&n);

    for(i = 0; i < n; i++)
    {
        printf("\nEnter Name: ");
        scanf("%s", s[i].name);

        printf("Roll no: ");
        scanf("%d", &s[i].roll);

        printf("Enter marks of the following subjects:\n");

        sum = 0; // reset sum for this student

        for (j = 0; j < 5; j++)
        {
            printf("Enter marks of subject %d: ", j + 1);
            scanf("%f", &s[i].marks[j]);
            sum += s[i].marks[j];
        }

        s[i].average = sum / 5;

        // Assign grade
        if(s[i].average >= 90)
            s[i].grade = 'A';
        else if(s[i].average >= 80)
            s[i].grade = 'B';
        else if(s[i].average >= 70)
            s[i].grade = 'C';
        else
            s[i].grade = 'F';
    }

    printf("\n\n======================Student Records======================\n");

    for(i = 0; i < n; i++)
    {
        printf("\n----------------------------------------------\n");
        printf("Name     : %s\n", s[i].name);
        printf("Roll No  : %d\n", s[i].roll);
        printf("Average  : %.2f\n", s[i].average);
        printf("Grade    : %c\n", s[i].grade);
    }

    // Find Topper
    max = s[0].average;
    strcpy(topper, s[0].name);

    for(i = 1; i < n; i++)
    {
        if(s[i].average > max)
        {
            max = s[i].average;
            strcpy(topper, s[i].name);
        }
    }

    printf("\nTopper = %s (%.2f)\n", topper, max);

    // Calculate Class Average
    classTotal = 0;
    for(i = 0; i < n; i++)
        classTotal += s[i].average;

    printf("Class Average = %.2f\n", classTotal / n);

    return 0;
}
